<Window x:Class="HuynhDucKhanhWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuynhDucKhanhWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Login Page" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" FontSize="30"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="209,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="325" Height="33" FontSize="20" TextChanged="txtUserName_TextChanged"/>
        <Label Content="UserName" HorizontalAlignment="Left" Margin="209,110,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="209,185,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.47,1.558"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="229,280,0,0" VerticalAlignment="Top" FontSize="20" Height="39" Width="82" Click="btnLogin_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="416,280,0,0" VerticalAlignment="Top" FontSize="20" Height="39" Width="76" Click="btnCancel_Click"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="210,227,0,0" VerticalAlignment="Top" Width="324" FontSize="20"/>

    </Grid>
</Window>
